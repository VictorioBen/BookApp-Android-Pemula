<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <androidx.cardview.widget.CardView
        style="@style/cardViewBook"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            style="@style/RelativRow"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/foto_buku"
                style="@style/FotoBuku"
                android:scaleType="center"
                android:src="@drawable/kotlin" />

            <TextView
                android:id="@+id/judul_buku"
                style="@style/judul"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/foto_buku"
                android:text="" />



            <TextView
                android:id="@+id/desc_buku"
                style="@style/subjudul"
                android:layout_below="@id/judul_buku"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@id/foto_buku"
                android:text="" />

            <TextView
                android:id="@+id/harga"
                style="@style/judul"
                android:layout_below="@id/desc_buku"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@id/foto_buku"
                android:text="" />


                <Button
                    android:id="@+id/btn_detail"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:text="@string/detail"
                    android:layout_marginStart="14dp"
                    android:layout_marginLeft="14dp"
                    android:layout_toRightOf="@id/foto_buku"
                    android:layout_below="@id/desc_buku"
                    android:textSize="12sp"
                     />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>

